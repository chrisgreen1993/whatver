{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireCleanWorkingDir": true
  },
  "npm": {
    "publish": true,
    "access": "public"
  },
  "github": {
    "release": true
  },
  "hooks": {
    "before:init": "bun run type-check && bun run check && bun test",
    "after:bump": "bun run build"
  }
}