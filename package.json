{
  "name": "whatver",
  "version": "2.0.0-alpha.0",
  "description": "A modern CLI tool and Node.js library for checking npm package versions against semver ranges",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts src/cli.ts --outdir dist --target node && bun run build:dts",
    "build:dts": "bun run tsc --emitDeclarationOnly --project tsconfig.types.json",
    "type-check": "bun run tsc --noEmit",
    "test": "bun test",
    "lint": "biome lint src",
    "lint:fix": "biome lint src --write",
    "format": "biome format src",
    "format:fix": "biome format src --write",
    "check": "biome check src",
    "check:fix": "biome check src --write"
  },
  "author": "Chris Green",
  "license": "ISC",
  "bin": "dist/cli.js",
  "dependencies": {
    "@types/yargs": "^17.0.33",
    "chalk": "^5.6.2",
    "cli-columns": "^4.0.0",
    "semver": "^7.7.2",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@npm/types": "^2.1.0",
    "@types/bun": "^1.2.21",
    "@types/semver": "^7.7.1",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist"
  ]
}
