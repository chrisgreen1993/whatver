{
  "name": "whatver",
  "version": "2.0.0",
  "description": "A modern CLI tool and Node.js library for checking npm package versions against semver ranges",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun run build.ts",
    "type-check": "bun run tsc --noEmit",
    "test": "bun test",
    "lint": "biome lint src",
    "lint:fix": "biome lint src --write",
    "format": "biome format src",
    "format:fix": "biome format src --write",
    "check": "biome check src",
    "check:fix": "biome check src --write",
    "release": "release-it",
    "release:dry-run": "release-it --dry-run"
  },
  "author": "Chris Green",
  "license": "MIT",
  "bin": {
    "whatver": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisgreen1993/whatver.git"
  },
  "homepage": "https://github.com/chrisgreen1993/whatver#readme",
  "bugs": {
    "url": "https://github.com/chrisgreen1993/whatver/issues"
  },
  "keywords": [
    "npm",
    "semver",
    "version",
    "cli",
    "package",
    "registry",
    "typescript",
    "bun"
  ],
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-columns": "^4.0.0",
    "semver": "^7.7.2",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@npm/types": "^2.1.0",
    "@types/bun": "^1.2.21",
    "@types/semver": "^7.7.1",
    "@types/yargs": "^17.0.33",
    "bun-plugin-dts": "^0.3.0",
    "release-it": "^19.0.4",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist"
  ]
}
